{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch React App",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/src/*"
            },
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
            "sourceMaps": true,
            "trace": false,
            "userDataDir": false,
            "preLaunchTask": "npm: start"
        }
    ]
}